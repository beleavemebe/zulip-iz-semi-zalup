<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AutoCompleteText" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.Headline1">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Text.Headline2">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Text.Headline3">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Headline4">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Body">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
